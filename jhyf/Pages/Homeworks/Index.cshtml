<div class="text-center">
    <h3 class="display-6">Домашние задания</h3>
</div>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-page="Create" style=text-decoration:none;>Добавить задание</a>
    </p>
}

@foreach (var item in Model.AddHomework) {
